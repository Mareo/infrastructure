{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "argocd": {
     "fileMatch": [
        "^k8s/argocd/apps/.+\\.ya?ml$"
    ]
  },
  "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "matchPackagePrefixes": ["external-secrets", "external-dns", "external-secrets", "cert-manager", "ingress-nginx", "authentik", "argoproj/argo-cd"],
        "automerge": true
      }, {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "matchDatasources": ["terraform-module", "terraform-provider"],
        "automerge": true
      }, {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "matchManagers": ["ansible-galaxy", "poetry", "terraform", "terraform-version"],
        "automerge": true
      }
  ]
}
